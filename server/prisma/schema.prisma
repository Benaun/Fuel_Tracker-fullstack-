generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId            String @id @default(cuid()) @map("user_id")
  number            String @unique
  name              String
  password          String
  cityDistance      Int[]  @default([]) @map("city_distance")
  trackDistance     Int[]  @default([]) @map("track_distance")
  otherCityDistance Int[]  @default([]) @map("other_city_distance")
  userCars          Json[] @default([]) @map("user_cars")

  role Role @default(USER)

  @@map("user")
}

model Car {
  carId     String @id @default(cuid()) @map("car")
  model     String
  city      String
  track     String
  otherCity String    @map("other_city")

  @@map("car")
}

enum Role {
  USER
  ADMIN
}
