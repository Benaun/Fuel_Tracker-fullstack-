generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  number   String @unique
  name     String
  password String
  id       String    @id @default(cuid())
  role     Role   @default(USER)
  cars     Car[]

  @@map("user")
}

model Car {
  model             String
  city              Int
  track             Int
  otherCity         Int    @map("other_city")
  cityDistance      Int[]  @map("city_distance")
  trackDistance     Int[]  @map("track_distance")
  otherCityDistance Int[]  @map("other_city_distance")
  id                String    @id @default(cuid())
  userId            String    @map("user_id")
  user              User   @relation(fields: [userId], references: [id])

  @@map("car")
}

enum Role {
  USER
  ADMIN
}
