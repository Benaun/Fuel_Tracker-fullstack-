generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  number   String @unique
  name     String
  password String

  cityDistances     CityDistance[]
  trackDistance     TrackDistance[]      
  otherCityDistance OtherCityDistance[]

  userCars Json[] @default([]) @map("user_cars")

  role Role @default(USER)

  @@map("user")
}

model Car {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  model     String
  city      String
  track     String
  otherCity String  @map("other_city")

  @@map("car")
}

model CityDistance {
  id    String @id @default(cuid())
  value Int    @default(0)

  user   User?   @relation(fields: [userId], references: [id])
  userId String? @map("user_id")

  @@map("city_distance")
}

model TrackDistance {
  id    String @id @default(cuid())
  value Int    @default(0)

  user   User?   @relation(fields: [userId], references: [id])
  userId String? @map("user_id")

  @@map("track_distance")
}

model OtherCityDistance {
  id    String @id @default(cuid())
  value Int    @default(0)

  user   User?   @relation(fields: [userId], references: [id])
  userId String? @map("user_id")

  @@map("other_city_distance")
}


enum Role {
  USER
  ADMIN
}
