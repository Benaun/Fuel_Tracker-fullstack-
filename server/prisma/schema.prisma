generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId   String @id @default(cuid()) @map("user_id")
  number   String @unique
  name     String
  password String

  role Role  @default(USER)
  cars Car[]

  @@map("user")
}

model Car {
  carId             String @id @default(cuid()) @map("car")
  model             String
  city              Int
  track             Int
  otherCity         Int    @map("other_city")
  cityDistance      Int[]  @default([]) @map("city_distance")
  trackDistance     Int[]  @default([]) @map("track_distance")
  otherCityDistance Int[]  @default([]) @map("other_city_distance")

  userId String @map("user_id")
  user   User   @relation(fields: [userId], references: [userId])

  @@map("car")
}

enum Role {
  USER
  ADMIN
}
